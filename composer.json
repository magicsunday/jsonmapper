{
    "name": "magicsunday/jsonmapper",
    "description": "Map JSON to PHP",
    "license": "MIT",
    "authors": [
        {
            "name": "Rico Sonntag",
            "email": "mail@ricosonntag.de",
            "role": "Developer",
            "homepage": "https://www.ricosonntag.de/"
        }
    ],
    "support": {
        "issues": "https://github.com/magicsunday/jsonmapper/issues"
    },
    "require": {
        "php": ">=5.6.0 <7.0.0",
        "ext-json": "*",
        "symfony/property-info": "^3.4",
        "symfony/property-access": "^3.4",
        "doctrine/inflector": "^1.1",
        "doctrine/annotations": "^1.4"
    },
    "require-dev": {
        "symfony/phpunit-bridge": "^5.0",
        "phpdocumentor/reflection-docblock": "^3.3",
        "friendsofphp/php-cs-fixer": "^2.0",
        "overtrue/phplint": "^2.4",
        "phpunit/phpunit": "^5.7"
    },
    "suggest": {
        "phpdocumentor/reflection-docblock": "In order to use the PhpDocExtractor this library is required too."
    },
    "autoload": {
        "psr-4": {
            "MagicSunday\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MagicSunday\\Test\\": "test/"
        }
    },
    "config": {
        "platform": {
            "php": "5.6"
        },
        "bin-dir": ".build/bin",
        "vendor-dir": ".build/vendor",
        "discard-changes": true,
        "sort-packages": true,
        "optimize-autoloader": true,
        "platform-check": false
    },
    "scripts": {
        "ci:test:php:lint": [
            "phplint"
        ],
        "ci:test:php:unit": [
            "phpunit"
        ],
        "ci:test": [
            "@ci:test:php:lint",
            "@ci:test:php:unit"
        ],
        "ci:cgl": [
            "php-cs-fixer fix --diff --verbose"
        ]
    }
}
